<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/search"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="135dp"
            android:text="电影"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_head_theme"
        android:onClick="onClicked"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="109dp">

            <ImageView
                android:id="@+id/img_head_theme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/movie10"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_head_theme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="城市印象"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_head_theme_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="一部电影一座城"
            android:textSize="15dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dot_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="215dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#E7EAF2">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="171dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="全部"
                    android:textSize="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="8dp"
                    android:text="经典"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="8dp"
                    android:text="新片"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="中国大陆"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="香港"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="25dp"
                    android:text="美国"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="日本"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="爱情"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:text="喜剧"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="科幻"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:text="动作"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_dot_line1"
        android:layerType="software" />
    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="92dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/img_show_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/scar" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_show_movie"
        android:onClick="onClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/img_show_movie"
            android:layout_width="156dp"
            android:layout_height="233dp"
            android:src="@drawable/movie7" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/tv_show_movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠儿"
                android:textSize="18dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_show_movie_brief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="英国 2018 喜剧 剧情 传记 同性"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/tv_show_movie_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最佳女主角"
                android:layout_marginTop="40dp"
                android:textSize="14dp"/>
        </LinearLayout>


    </LinearLayout>
    <!-- 更多 -->
    <LinearLayout
        android:id="@+id/ll_theme_more_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:onClick="onClicked">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="more"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <!-- 虚线分割线 -->
    <View
        android:background="@drawable/dash_line"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layerType="software"/>

    <!-- 城市印象 -->
    <LinearLayout
        android:id="@+id/ll_first_theme"
        android:onClick="onClicked"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_first_theme"
                android:src="@drawable/movie10"
                android:scaleType="fitXY"
                android:layout_width="270dp"
                android:layout_height="80dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_first_theme_name"
                    android:layout_gravity="bottom|right"
                    android:text="城市印象"
                    android:textColor="#101010"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_first_theme_brief"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="一部电影一座城"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <!-- 虚线分割线 -->
    <View
        android:background="@drawable/dash_line"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layerType="software"/>

    <!-- 作品集 -->
    <LinearLayout
        android:id="@+id/ll_second_theme"
        android:onClick="onClicked"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_second_theme_name"
                        android:layout_gravity="bottom|left"
                        android:text="作品集"
                        android:textSize="20sp"
                        android:textColor="#101010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <ImageView
                    android:id="@+id/img_second_theme"
                    android:layout_width="270dp"
                    android:layout_height="80dp"
                    android:layout_gravity=""
                    android:scaleType="fitXY"
                    android:src="@drawable/movie8" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_second_theme_brief"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:text="温暖人心的励志集"
                    android:textSize="16sp"
                    android:textColor="#808080"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 虚线分割线 -->
    <View
        android:background="@drawable/dash_line"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layerType="software"/>

    <!-- 精神支柱 -->
    <LinearLayout
        android:id="@+id/ll_third_theme"
        android:onClick="onClicked"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_third_theme"
                android:src="@drawable/movie9"
                android:scaleType="fitXY"
                android:layout_width="270dp"
                android:layout_height="80dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_third_theme_name"
                    android:layout_gravity="bottom|right"
                    android:text="精神支柱"
                    android:textColor="#101010"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_third_theme_brief"
                android:gravity="right"
                android:layout_gravity="right"
                android:text="温暖人心的励志集"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <!-- 虚线分割线 -->
    <View
        android:background="@drawable/dash_line"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layerType="software"/>


    <!-- 底部留白 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
    </LinearLayout>




</LinearLayout>
</ScrollView>