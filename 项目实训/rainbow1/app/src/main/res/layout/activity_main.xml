<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- 选项卡按钮所在布局 -->
    <LinearLayout
        android:background="@drawable/linearlayout"
        android:layout_alignParentBottom="true"
        android:id="@+id/tab_widget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <!-- 首页 -->
        <LinearLayout
            android:id="@+id/tab_spec_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home"/>

            <TextView
                android:id="@+id/tv_homepage"
                android:textSize="15dp"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"/>

        </LinearLayout>

        <!-- 电影 -->
        <LinearLayout
            android:id="@+id/tab_spec_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_movie"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/movie2"/>

            <TextView
                android:id="@+id/tv_movie"
                android:textSize="15dp"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影"/>

        </LinearLayout>

        <!-- 动态 -->
        <LinearLayout
            android:id="@+id/tab_spec_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_post"
                android:src="@drawable/post"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="动态"/>

        </LinearLayout>

        <!-- 城市 -->
        <LinearLayout
            android:id="@+id/tab_spec_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/city"/>
            <TextView
                android:id="@+id/tv_city"
                android:textSize="15dp"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"/>

        </LinearLayout>

        <!-- 个人中心 -->
        <LinearLayout
            android:id="@+id/tab_spec_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/center"/>

            <TextView
                android:id="@+id/tv_me"
                android:textSize="15dp"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Fragment内容显示的帧布局 -->
    <FrameLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_widget" />

</RelativeLayout>