<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_headimgae"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/balemo" />

            <TextView
                android:id="@+id/tv_username"
                android:text="说正事专用小号"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_content"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.msl.rainbow1.MyGridView
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_share"
                    android:src="@drawable/share"
                    android:scaleType="centerCrop"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="分享"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_collect"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_collect"
                    android:src="@drawable/shoucang"
                    android:scaleType="centerCrop"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:text="收藏"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">

                <com.zhuang.likeviewlibrary.LikeView
                    android:id="@+id/likeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:like_canCancel="true"
                    app:like_iconSize="18dp"
                    app:like_hasFly="false"
                    app:like_textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#CAC8C8"
        android:layout_width="match_parent"
        android:layout_height="8dp">

    </LinearLayout>

</LinearLayout>
