<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_movie"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#E9E9E9">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="80dp"
            android:layout_height="114dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="#E9E9E9"
            android:scaleType="centerCrop"
            android:src="@drawable/movie2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="罗马假日"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_movie_enname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roman Holiday" />
            <TextView
                android:id="@+id/tv_year_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1953 爱情"/>
            <TextView
                android:id="@+id/tv_movie_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="美国"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:text="片场"/>
            <TextView
                android:id="@+id/tv_movie_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="25dp"
                android:text="42"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:src="@drawable/line" />
        <TextView
            android:id="@+id/tv_movie_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="65dp"
            android:textSize="15dp"
            android:lineSpacingExtra="5dp"
            android:text="梵蒂冈|伦敦|巴黎市|阿姆斯特丹|罗马"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:lineSpacingExtra="3dp"
        android:textSize="15dp"
        android:text="【罗马】在罗马取景的电影浩如烟海，但还是这一部最经典"/>
</LinearLayout>